<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="@dimen/set_size_dialog_minWidth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/set_size_margin_extra_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButtonClose"
                app:srcCompat="@drawable/ic_close_black_24dp"
                tools:ignore="VectorDrawableCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backfavorit"
                android:padding="@dimen/set_size_margin_medium" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/set_size_margin_large"
            android:fontFamily="@font/roboto_bold"
            android:text="Instansi"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewInstansi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Kementrian Agama Provinsi Sulawesi Selatan" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/set_size_margin_medium"
            android:background="#FFE1E1E1" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/set_size_margin_large"
            android:fontFamily="@font/roboto_bold"
            android:text="Tema"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewTema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="berhasil atau beri tanda jika menerima notif yang multiple"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/set_size_margin_medium"
            android:layout_marginTop="@dimen/set_size_margin_medium"
            android:background="#FFE1E1E1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/set_size_margin_large"
            android:fontFamily="@font/roboto_bold"
            android:text="Keterangan"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewKeterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Minta tolong diupdate di file excel yang pernah saya kirimkan berulang disini dan email ya pak, disitu ada skenario lengkap, pak Adhy cukup isi sesuai format yang sudah ditentukan. V jika berhasil, X jika tidak berhasil atau beri tanda jika menerima notif yang multiple"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/EditTextDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/set_size_margin_large"
            android:layout_marginTop="@dimen/set_size_margin_medium"
            android:background="@drawable/background2"
            android:hint="\nDeskripsi\n"
            android:padding="@dimen/set_size_margin_large"
            android:textSize="14sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/set_size_margin"
            android:layout_marginTop="@dimen/set_size_margin">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Submit"
            android:textColor="@android:color/white" />

    </LinearLayout>


</ScrollView>
